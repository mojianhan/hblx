{
  "extends": [
    "eslint:recommended"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "env": {
    "node": true,
    "es6": true,
    "mocha": true
  },
  "rules": {
    "no-multi-spaces": [ "error" ],
    "keyword-spacing": [ "error" ],
    "block-spacing": [ "error" ],
    "array-bracket-spacing": [ "error", "always" ],
    "object-curly-spacing": [ "error", "always" ],
    "arrow-spacing": [ "error" ],
    "wrap-iife": [ "error" ]
  }
}
